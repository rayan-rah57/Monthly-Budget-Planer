generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionType {
  INCOME
  EXPENSE
  BILL
  DEBT
  SAVING
}

model Transaction {
  id          String          @id @default(cuid())
  date        DateTime
  description String
  amount      Decimal         @db.Decimal(12, 2)
  category    String
  type        TransactionType

  @@index([date, type])
  @@index([type, category])
}

model BudgetConfig {
  id           String          @id @default(cuid())
  month        Int
  year         Int
  category     String
  targetAmount Decimal         @db.Decimal(12, 2)
  type         TransactionType

  @@unique([month, year, category, type])
  @@index([month, year])
}
